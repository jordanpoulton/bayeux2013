<h1>Edit <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= field_set_tag 'Account Details', :class => 'account-details' do %>
    <div><%= f.label :email %><br />
    <%= f.email_field :email %></div>

    <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>

  <%end%>

  <%= field_set_tag 'Your patch', :class => 'patch_details' do %>

    <div id="autocompleted_lat"><%= f.label :lat %><br />
    <%= f.text_field :lat %></div>

    <div id="autocompleted_lng"><%= f.label :lng %><br />
    <%= f.text_field :lng %></div>

    <div><%= f.label :image_link %><br />
    <%= f.text_field :image_link, :placeholder => "Link to the image you want to display (use the whole thing: http://www.blah.com....)"%></div>

    <div><%= f.label :content %><br />
    <%= f.text_field :content, :placeholder => "The content you want to display when someone clicks your image - Be Imaginative!" %></div>

  <%end%>

  <div id="submit_patch_form"><%= f.submit "Sign up" %></div>
<% end %>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>
